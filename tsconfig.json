{
    "compileOnSave": true,
    "compilerOptions": {
        "noEmit": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "build/",
        "removeComments": false,
        "stripInternal": true,
        "target": "es6",
        "jsx": "react",
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "resolveJsonModule": true,
        "plugins": [
            {
                "name": "@fimbul/mithotyn",
                "displayErrorsAsWarnings": true
            }
        ],
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "src/**/*.d.ts",
        "build/**",
        "node_modules/**"
    ]
}
