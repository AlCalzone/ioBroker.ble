{
  "name": "iobroker.ble",
  "version": "0.12.0",
  "description": "ioBroker adapter to monitor Bluetooth Low Energy (BLE) beacons",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "main": "build/main.js",
  "files": [
    "admin/*.html",
    "admin/build",
    "admin/*.css",
    "admin/*.png",
    "admin/*.js",
    "build/",
    "io-package.json"
  ],
  "contributors": [
    "zuvielx9 (https://github.com/zuvielx9)"
  ],
  "homepage": "https://github.com/AlCalzone/ioBroker.ble",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "bluetooth",
    "BLE",
    "beacon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.ble"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-14",
    "@iobroker/adapter-core": "^2.5.1",
    "alcalzone-shared": "^4.0.0",
    "iobroker-react-components": "^1.0.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@iobroker/testing": "^2.5.2",
    "@material-ui/core": "^4.12.3",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/jquery": "^3.5.8",
    "@types/materialize-css": "^1.0.11",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.5",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "axios": "^0.24.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.20",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "build:ts": "tsc -p src/tsconfig.json",
    "check:ts": "tsc -p src/tsconfig.json --noEmit",
    "prebuild:ts": "rimraf ./build",
    "build:parcel": "parcel build admin/src/index.tsx -d admin/build",
    "build": "npm run build:ts && npm run build:parcel",
    "watch:parcel": "parcel admin/src/index.tsx -d admin/build",
    "watch": "tsc -p src/tsconfig.json --watch",
    "test:unit": "mocha test/unit --exit",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test:ts": "mocha --opts test/mocha.typescript.opts",
    "test": "mocha --opts test/mocha.typescript.opts --watch",
    "coverage": "nyc mocha --opts test/mocha.typescript.opts",
    "show-coverage": "npm run coverage & start ./coverage/index.html",
    "lint:ts": "eslint --ext .ts src",
    "lint": "npm run lint:ts",
    "prepublishOnly": "npm run test:package",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.ble/issues"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "build/**",
      "src/**/*.test.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "readmeFilename": "README.md"
}
