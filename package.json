{
  "name": "iobroker.ble",
  "version": "0.13.0",
  "description": "ioBroker adapter to monitor Bluetooth Low Energy (BLE) beacons",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "main": "build/main.js",
  "files": [
    "admin/*.html",
    "admin/build",
    "admin/*.css",
    "admin/*.png",
    "admin/*.js",
    "build/",
    "io-package.json"
  ],
  "contributors": [
    "zuvielx9 (https://github.com/zuvielx9)"
  ],
  "homepage": "https://github.com/AlCalzone/ioBroker.ble",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "bluetooth",
    "BLE",
    "beacon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.ble"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "@iobroker/adapter-core": "^2.6.0",
    "alcalzone-shared": "^4.0.1",
    "iobroker-react-components": "^1.0.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "~3.5.8",
    "@alcalzone/release-script-plugin-iobroker": "~3.5.8",
    "@alcalzone/release-script-plugin-license": "~3.5.8",
    "@alcalzone/release-script-plugin-manual-review": "~3.5.8",
    "@iobroker/adapter-dev": "^1.0.0",
    "@iobroker/testing": "^2.6.0",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node12": "^1.0.9",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.11",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "axios": "^0.26.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "iobroker-react": "git+https://git@github.com/AlCalzone/iobroker-react.git",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "prebuild": "rimraf build admin/build",
    "build:react": "build-adapter react",
    "build:ts": "build-adapter ts",
    "check": "tsc -p tsconfig.build.json --noEmit",
    "build": "build-adapter all",
    "watch:react": "npm run build:react -- --watch",
    "watch:ts": "npm run build:ts -- --watch",
    "watch": "build-adapter all --watch",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test:ts": "mocha src/**/*.test.ts",
    "test": "mocha src/**/*.test.ts --watch",
    "coverage": "nyc mocha src/**/*.test.ts",
    "show-coverage": "npm run coverage & start ./coverage/index.html",
    "lint:ts": "eslint --ext .ts src",
    "lint": "npm run lint:ts",
    "prepublishOnly": "npm run test:package",
    "translate": "translate-adapter translate",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.ble/issues"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "build/**",
      "src/**/*.test.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "readmeFilename": "README.md"
}
